<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pief.facampnetwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FACAMPNetwork">
        android:name=".Utilities"
        <activity android:name=".RegisterActivity"
            android:label="@string/register"></activity>
        <activity android:name=".CaronaActivity"
            android:label="@string/label_ride"></activity>
        <activity android:name=".AulaActivity"
            android:label="@string/label_class"></activity>
        <activity android:name=".ProdutoActivity"
            android:label="@string/label_product"></activity>
        <activity android:name=".UsuarioActivity"
            android:label="@string/user"></activity>
        <activity android:name=".AdicionarCaronaActivity"
            android:label="@string/add_ride"></activity>
        <activity android:name=".AdicionarAulaActivity"
            android:label="@string/add_class"></activity>
        <activity android:name=".AdicionarProdutoActivity"
            android:label="@string/add_product"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
                    android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>