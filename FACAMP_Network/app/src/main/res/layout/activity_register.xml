<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/image_border"
        android:contentDescription="@string/description_profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/editNomeRegister"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/text_line"
        android:ems="10"
        android:fontFamily="@font/gill_sans"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="textShortMessage|textNoSuggestions"
        android:maxLength="20"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFoto" />

    <EditText
        android:id="@+id/editLoginRegister"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/text_line"
        android:ems="10"
        android:fontFamily="@font/gill_sans"
        android:hint="@string/login"
        android:importantForAutofill="no"
        android:inputType="textShortMessage|textNoSuggestions"
        android:maxLength="20"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNomeRegister" />

    <EditText
        android:id="@+id/editSenhaRegister"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/text_line"
        android:ems="10"
        android:fontFamily="@font/gill_sans"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|textPassword"
        android:maxLength="32"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLoginRegister" />

    <EditText
        android:id="@+id/editTelefoneRegister"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/text_line"
        android:ems="10"
        android:fontFamily="@font/gill_sans"
        android:hint="@string/phone"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|phone"
        android:maxLength="32"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaRegister" />

    <EditText
        android:id="@+id/editBiografiaRegister"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/text_line"
        android:ems="10"
        android:fontFamily="@font/gill_sans"
        android:gravity="start|top"
        android:hint="@string/biography"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:maxLength="80"
        android:maxLines="4"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTelefoneRegister" />

    <Button
        android:id="@+id/buttonRegistrar"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_onclick_ripple"
        android:fontFamily="@font/gill_sans"
        android:text="@string/register"
        android:textColor="@color/button_text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editBiografiaRegister" />

    <Button
        android:id="@+id/buttonTemConta"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gill_sans"
        android:text="@string/i_already_have_an_account"
        android:textColor="@color/label_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistrar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonRegisterPasswordVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/editSenhaRegister"
        app:layout_constraintStart_toEndOf="@+id/editSenhaRegister"
        app:layout_constraintTop_toTopOf="@+id/editSenhaRegister"
        app:maxImageSize="30sp"
        app:srcCompat="@android:drawable/ic_menu_view"
        app:tint="@color/icon_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>